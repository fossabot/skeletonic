/* @group Button */
button, .button, [type=submit]
  background: #color-grey
  cursor: pointer
  margin: 10px
  padding: 12px 12px
  text-decoration: none
  text-align: center
  transition: all 150ms linear
  &:active
    opacity: 0.75
    transition: all 150ms linear
  &:hover
    background: color-lighter-grey
    opacity: 0.85
    transition: all 150ms linear
  &:focus
    background: color-lighter-grey
    opacity: 0.7
    transition: all 150ms linear  
/* @end */

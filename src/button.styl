/* @group Button */
button, .button, [type=submit]
  background: #color-grey;
  padding: 9px 20px;
  text-decoration: none
  transition: transition
&:active
  opacity: 0.75
  transition: all 150ms linear
&:hover
  background: color-lighter-grey
  opacity: 0.85
  transition: all 150ms linear
&:focus
  background: color-lighter-grey
  opacity: 0.7
  outline: 1px dotted color-grey;
&.outline
  background: none
/* @end */

.card
	background: $white
	margin-bottom: 2rem

.card a
	color: $black
	text-decoration: none

.card a:hover
	box-shadow: 3px 3px 8px hsl(0, 0%, 80%)
	text-decoration: none

.card-content
	padding: 1.4rem

.card-content h3
	margin-top: 0
	margin-bottom: .5rem

.cards
   display: flex
   flex-wrap: wrap
   justify-content: space-between

.card
	flex: 0 1 calc(25% - 1rem)

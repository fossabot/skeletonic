/* @group Grid */
.container
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box
  margin: 0 auto
  max-width: 940px
  padding: 0 30px
  position: relative
  width: 100%

@media (min-width: 576px)
  .container
    max-width: 540px

@media (min-width: 768px)
  .container
    max-width: 720px

@media (min-width: 992px)
  .container
    max-width: 960px

@media (min-width: 1200px)
  .container
    max-width: 1140px

.grid-flex
    display: -webkit-box
    display: flex
    flex-wrap: wrap
    -ms-flex-wrap: wrap

.row:after
    clear: both
    content: ''
    display: table

.flex-1
    -webkit-box-flex: 1
    -moz-box-flex: 1
    -ms-box-flex: 1
    flex: 1

.flex-2
    -webkit-box-flex: 2
    -moz-box-flex: 2
    -ms-box-flex: 2
    flex: 2

.flex-3
    -webkit-box-flex: 3
    -moz-box-flex: 3
    -ms-box-flex: 3
    flex: 3

.flex-4
    -webkit-box-flex: 4
    -moz-box-flex: 4
    -ms-box-flex: 4
    flex: 4

.flex-5
    -webkit-box-flex: 5
    -moz-box-flex: 5
    -ms-box-flex: 5
    flex: 5

.flex-6
    -webkit-box-flex: 6
    -moz-box-flex: 6
    -ms-box-flex: 6
    flex: 6

.flex-7
    -webkit-box-flex: 7
    -moz-box-flex: 7
    -ms-box-flex: 7
    flex: 7

.flex-8
    -webkit-box-flex: 8
    -moz-box-flex: 8
    -ms-box-flex: 8
    flex: 8

.flex-9
    -webkit-box-flex: 9
    -moz-box-flex: 9
    -ms-box-flex: 9
    flex: 9

.flex-10
    -webkit-box-flex: 10
    -moz-box-flex: 10
    -ms-box-flex: 10
    flex: 10
/* @end */

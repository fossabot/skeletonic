/* @group Grid */

/*csslint box-sizing: false*/

.container
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box   
  box-sizing: border-box
  margin: 0 auto
  max-width: 960px
  padding: 0 20px
  position: relative
  width: 100%

.grid-flex

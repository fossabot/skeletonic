/* @group Base */
*
  color: color-black
  font-family: font
  font-size: typography-size-base
  font-weight: 400
  margin: 0.25em 0
  padding: 0
  word-wrap: break-word

html
  font-family: sans-serif
  -ms-text-size-adjust: 100%
  -webkit-text-size-adjust: 100%

textarea
  -moz-box-sizing:border-box
  -webkit-box-sizing:border-box
  border-color:#333333
  box-sizing:border-box
  min-height:70px
  padding:10px;
  width:100%

input,
textarea,
select,
fieldset,
pre,
blockquote,
dl,
figure,
table,
p,
ul,
ol,
form
  margin-bottom: 1.5rem

strong, b
  font-weight: bold
  color: color-black

em, i
  font-style: italic

/* @end */
